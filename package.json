{
  "name": "autenticacao-nodejs",
  "version": "1.0.0",
  "type": "module",
  "description": "API RESTful com Node.js, Express e PostgreSQL",
  "main": "src/server.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --out-dir build --clean --target node18",
    "start": "node build/index.js",
    "docker-up": "cd docker && docker-compose up -d",
    "docker-down": "cd docker && docker-compose down",
    "docker-restart": "npm run docker-down && npm run docker-up",
    "docker-logs": "cd docker && docker-compose logs -f",
    "docker-exec": "docker exec -it docker-backend-1 bash",
    "docker-dev": "docker exec -it docker-backend-1 npm run dev",
    "docker-exit": "exit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watchAll",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "prepare": "husky",
    "dev:make": "make docker-start"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "jwt",
    "rest-api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "10.1.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "pg": "8.16.3",
    "sequelize": "^6.37.7",
    "swagger-ui-express": "5.0.1",
    "typescript": "^5.9.3",
    "validator": "13.15.26",
    "winston": "3.19.0",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@eslint/js": "^9.39.2",
    "@jest/globals": "^30.2.0",
    "@types/bcrypt": "6.0.0",
    "@types/cors": "^2.8.19",
    "@types/eslint": "^9.6.1",
    "@types/express": "^5.0.6",
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.1",
    "@types/swagger-ui-express": "4.1.8",
    "cross-env": "10.1.0",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "jiti": "^2.6.1",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4",
    "ts-jest": "29.4.6",
    "tsup": "8.5.1",
    "tsx": "^4.21.0",
    "typescript-eslint": "^8.49.0"
  }
}
